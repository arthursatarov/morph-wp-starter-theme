# ================================
# Project Settings
# ================================
PROJECT_NAME=wp_project

# ================================
# WordPress Settings
# ================================
# Включает или выключает режим отладки WP
# Локально ставь 1, на продакшене — 0
WP_DEBUG=1

# ================================
# Database Settings
# ================================
# Хост базы (обычно имя сервиса db из docker-compose.yml)
DB_HOST=db

# Имя базы данных WordPress
DB_NAME=wordpress

# Пользователь базы
DB_USER=wpuser

# Пароль пользователя базы
DB_PASSWORD=wppass

# Root-пароль MySQL/MariaDB
DB_ROOT_PASSWORD=rootpass

# ================================
# Ports
# ================================
# WordPress: локальный порт → порт внутри контейнера
# пример: 8000:80 → заходишь на http://localhost:8000
WP_PORTS=8000:80

# phpMyAdmin: локальный порт → порт внутри контейнера
# пример: 8080:80 → заходишь на http://localhost:8080
PMA_PORTS=8080:80
